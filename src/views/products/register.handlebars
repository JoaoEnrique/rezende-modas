<script src="../../js/products/handleAddProduct.js"></script>

<div class="w-screen bg-gray-background flex items-center justify-center" style="min-height: calc(100vh - 74px);">
    <form class=" p-4 w-380 rounded-md flex items-center flex-col shadow-lg gap-y-2.5 bg-white">
        <h3 class="title">Cadastrar Produto</h3>

        <label for="name">Nome do Produto</label>
        <input id="name" name="name" type="text" placeholder="Blusa Básica" class="input-facebook">

        <label for="price">Valor</label>
        <input pattern="^\d*\.?\d*$" id="price" name="price" type="text" placeholder="20.89" class="input-facebook">

        <label for="reference">Referência</label>
        <input id="reference" name="reference" type="text" placeholder="564" class="input-facebook">

        <label for="quantity">Quantidade</label>
        <input id="quantity" name="quantity" type="number" placeholder="5" class="input-facebook">

        <div class="form-group">
            <label for="masc">Masculino</label>
            <input type="radio" id="masc" value="Masculino" name="type"> 

            <label for="fem">Feminino</label>
            <input type="radio" id="fem" value="Feminino" name="type"> 
        </div>

        <hr class="w-full m-4 border-gray-300 border">
        
        <button type="submit" class="h-12 w-full bg-red-800 rounded-md text-white">Editar produto</button>
    </form>
</div>