            <button type="submit" class="h-12 w-full bg-red-800 rounded-md text-white">Cadastrar</button>
            <hr class="w-full m-4 border-gray-300 border">
            
            {{#if name}}
                
            {{else}}
                <a href="/login" class="cursor-pointer text-slate-500">Possui uma conta? Realize o login</a>
            {{/if}}
        </form>
    </div>
</div>