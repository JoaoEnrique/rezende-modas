<script src="../../js/handleRemoveEmployee.js"></script>

<div style="min-height: calc(100vh - 74px);">
    <div class="container mx-auto p-8">
        <h1 class="text-2xl mb-4">Lista de Funcionários</h1>

        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border rounded">
                <thead class="bg-red-800 text-white">
                    <tr>
                        <th class="py-2 px-4">ID</th>
                        <th class="py-2 px-4">Nome</th>
                        <th class="py-2 px-4">e-mail</th>
                        <th class="py-2 px-4">senha</th>
                        <th class="py-2 px-4">Ações</th>
                    </tr>
                </thead>
                <tbody class="text-gray-700">
                    {{#each funcionarios}}
                        <tr>
                            <td class="border px-4 py-2">{{this.id}}</td>
                            <td class="border px-4 py-2">{{this.name}}</td>
                            <td class="border px-4 py-2">{{this.email}}</td>
                            <td class="border px-4 py-2">{{this.password}}</td>
                            <td class="border px-4 py-2">
                                <a href="/employees/edit/{{this.id}}" class="text-blue-500 hover:text-blue-700 mr-2"><i class="fas fa-edit"></i></a>
                                <button class="text-red-500 hover:text-red-700"><i class="fas fa-trash-alt"></i></button>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>